<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Pheidippides.Ui"
             xmlns:h="clr-namespace:Pheidippides.Helpers"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Pheidippides.Ui.AlarmsView"
             x:DataType="ui:AlarmsViewModel">
    <Grid RowDefinitions="*,Auto">
        <ContentControl Content="{Binding AlarmList}" />

        <Button Grid.Row="1"
                Classes="align-stretch content-align-center h1"
                Content="{DynamicResource Lang.Create}"
                Command="{x:Static h:PheidippidesCommands.ShowCreateAlarmCommand}" />
    </Grid>
</UserControl>